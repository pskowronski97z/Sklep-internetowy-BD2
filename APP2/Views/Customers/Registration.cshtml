@model ShopLogin.Models.Customer
@{
    ViewBag.Title = "Rejestracja";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />


@using (Html.BeginForm("NewCustomer", "Customers"))
{


    
    <div class="card border-dark mb-3" style="max-width:33rem; margin-left:280px;text-align:center">
        <div class="card-header"><h2>Rejestracja</h2></div>
        <div class="card-body">

            <p class="card-text">
                <div class="form-group">

                    <table style=" margin-left:30px;margin-right:30px">

                        <tr>
                            <td><span style="font-size: 20px">Dane kontaktowe</span><br /><br /></td>
                            <td><div style="width:70px"></div></td>
                            <td><span style="font-size: 20px">Dane do wysyłki</span><br /><br /></td>
                        <tr />

                        <tr>
                            
                            <td>                               
                                <input type="text" class="form-control" placeholder="Login" name="Login" id="Login">
                                <br />
                            </td>
                            <td><div style="width:70px"></div></td>
                            <td>
                                <input type="text" class="form-control" placeholder="Ulica" name="Street" id="Street">
                                <br />
                            </td>
                        </tr>

                        <tr>
                            <td>
                                <input type="text" class="form-control" placeholder="Hasło" name="Password" id="Password">
                                <br />
                            </td>
                            <td><div style="width:70px"></div></td>
                            <td>
                                <input type="text" class="form-control" placeholder="Budynek" name="Building" id="Building">
                                <br />
                            </td>
                        </tr>

                        <tr>
                            <td>
                                <input type="text" class="form-control" placeholder="Imię" name="FirstName" id="FirstName">
                                <br />
                            </td>
                            <td><div style="width:70px"></div></td>
                            <td>
                                <input type="text" class="form-control" placeholder="Lokal" name="Apartment" id="Apartment">
                                <br />
                            </td>
                        </tr>

                        <tr>
                            <td>
                                <input type="text" class="form-control" placeholder="Nazwisko" name="LastName" id="LastName">
                                <br />
                            </td>
                            <td><div style="width:70px"></div></td>
                            <td>
                                <input type="text" class="form-control" placeholder="Miasto" name="City" id="City">
                                <br />
                            </td>
                        </tr>

                        <tr>
                            <td>
                                <input type="text" class="form-control" placeholder="Adres Email" name="Email" id="Email">
                                <br />
                            </td>
                            <td><div style="width:70px"></div></td>
                            <td>
                                <input type="text" class="form-control" placeholder="Kod pocztowy" name="PostCode" id="PostCode">
                                <br />
                            </td>
                        </tr>

                        <tr>
                            <td>
                                <input type="date" class="form-control" placeholder="" name="BirthDate" id="BirthDate">
                                <br />

                            </td>
                            <td><div style="width:70px"></div></td>
                            <td>
                                <input type="text" class="form-control" placeholder="Numer telefonu" name="PhoneNumber" id="PhoneNumber">
                                <br />

                            </td>



                        </tr>

                    </table>
                    <div style="text-align: center">
                        <br />

                        <button type="submit" class="btn btn-warning btn-lg">Utwórz konto</button>

                    </div>
                </div>
            </p>
        </div>
    </div>

}
